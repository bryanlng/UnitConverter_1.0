<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bryan.unitconverter.DecimalToBinary">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dec_edit_text"
        android:hint="@string/decimal_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convert_decimalToBinary"
        android:text="@string/convert_button"
        android:onClick="convertValues"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dec_edit_text"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/binary_edit_text"
        android:hint="@string/binary_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/convert_decimalToBinary"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_decimalToBinary"
        android:text="@string/clear_button"
        android:onClick="clearBoth"
        android:layout_below="@+id/binary_edit_text"
        android:layout_alignLeft="@+id/convert_decimalToBinary"
        android:layout_alignStart="@+id/convert_decimalToBinary" />

</RelativeLayout>
