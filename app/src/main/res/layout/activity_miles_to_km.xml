<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bryan.unitconverter.MilesToKm">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/miles_edit_text"
        android:hint="@string/miles_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convert_milesToKm"
        android:text="@string/convert_button"
        android:onClick="convertValues"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/miles_edit_text"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/km_edit_text"
        android:hint="@string/km_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/convert_milesToKm"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_milesToKm"
        android:text="@string/clear_button"
        android:onClick="clearBoth"
        android:layout_below="@+id/km_edit_text"
        android:layout_alignLeft="@+id/convert_milesToKm"
        android:layout_alignStart="@+id/convert_milesToKm" />

</RelativeLayout>
